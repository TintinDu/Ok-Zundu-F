<div class="navbar navbar-expand-sm navbar-zundu fixed-top" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">

    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "OkZunduIcon.jpg" %>
    <% end %>

    <% if current_page?(raids_path) %>
      <div class="search-form" id="form-raid">
        <%= form_tag raids_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
          placeholder: "ex. Bahamut"
          %>
          <button class="btn btn-turquoise">
            <i class="fas fa-search"></i>
          </button>
        <% end %>
      </div>
    <% elsif current_page?(jobs_path) %>
      <div class="search-form" id="form-job">
        <%= form_tag jobs_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
          placeholder: "ex. Paladin"
          %>
          <button class="btn btn-turquoise">
            <i class="fas fa-search"></i>
          </button>
        <% end %>
      </div>
    <% end %>

  <div class="avatar-layout">
    <ul class="navbar-nav me-auto avatar-layout" id="nav-ul">
      <% if user_signed_in? %>
        <% unless current_page?(jobs_path) %>
          <li class="nav-item active">
            <%= link_to "Jobs", jobs_path, class: "nav-link nav-zundu-link" %>
          </li>
        <% end %>
        <% unless current_page?(raids_path) %>
          <li class="nav-item active">
            <%= link_to "Raids", raids_path, class: "nav-link nav-zundu-link" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <% if current_user.avatar.key %>
            <%# <button class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button> %>
            <%= cl_image_tag current_user.avatar.key, width: 50, height: 50, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "zunduhead.png", width: 50, height: 50, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "DÃ©connexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link nav-zundu-link" %>
        </li>
      <% end %>
    </ul>
  </div>

</div>
